console.log("Take Home Task Promise");

function jumlah(a,b){
    const penjumlahan= new Promise ((resolve,reject)=>{
        if(typeof a!="number"||typeof b!="number"){
            reject ("ada angka tapi string")
        }
        else{
            resolve (a + b);
        }
    })
    return penjumlahan;
}
let hasilPenjumlahan=0
jumlah(10,20)
.then (function(hasil){ 
    console.log("Hasil Penjumlahan 10 + 20 = ", hasil);
})
.catch(function(e){
    console.log(e)
})
.finally(()=>{
    console.log ("BERHASIL")
})


