function pangkat(a , b){
    const perpangkatan= new Promise ((resolve,reject)=>{
        if(typeof a!="number"||typeof b!="number"){
            reject ("ada angka tapi string")
        }
        else{
            resolve (a ** b);
        }
    })
    return perpangkatan;
}
let hasilPangkat = 0
pangkat(2,10)
.then (function(hasil){ 
    console.log("Hasil Perpangkatan 2 ** 10 = ", hasil);
})
.catch(function(e){
    console.log(e)
})
.finally(()=>{
    console.log ("BERHASIL")
})

